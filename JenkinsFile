pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                echo "Récupération du code source..."
            }
        }
        stage('Start emulator') {
            steps {
                sh '''
                  emulator -avd Pixel_3 -no-snapshot -noaudio -no-window &
                  adb wait-for-device
                '''
            }
        }

        stage('Run_Test') {
            steps {
                echo "Exécution des tests Maven..."
                sh 'mvn clean test'
            }
        }
    }

    post {
        always {
            echo "Publication des rapports..."
        }
    }
}
